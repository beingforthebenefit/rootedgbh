---
interface Props {
	title: string;
}

const { title } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Rooted Growth Behavioral Health provides applied behavioral analysis (ABA) therapy for neurodiverse individuals in Alameda County, California." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href=`${baseUrl}/favicon.svg` />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="font-sans antialiased">
		<header class="fixed w-full bg-white shadow-sm z-50">
			<nav class="container mx-auto px-6 py-4">
				<div class="flex items-center justify-between">
					<a href="/" class="text-xl font-bold text-purple-700">
						Rooted Growth
					</a>
					<div class="hidden md:flex space-x-8">
						<a href="#about" class="text-gray-600 hover:text-purple-700">About</a>
						<a href="#services" class="text-gray-600 hover:text-purple-700">Services</a>
						<a href="#contact" class="text-gray-600 hover:text-purple-700">Contact</a>
					</div>
					<button class="md:hidden text-gray-600" id="mobile-menu-button">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
						</svg>
					</button>
				</div>
				<div class="md:hidden hidden" id="mobile-menu">
					<div class="pt-4 pb-3 space-y-3">
						<a href="#about" class="block text-gray-600 hover:text-purple-700">About</a>
						<a href="#services" class="block text-gray-600 hover:text-purple-700">Services</a>
						<a href="#contact" class="block text-gray-600 hover:text-purple-700">Contact</a>
					</div>
				</div>
			</nav>
		</header>

		<slot />

		<footer class="bg-gray-900 text-white py-12">
			<div class="container mx-auto px-6">
				<div class="text-center">
					<p class="text-sm">
						Copyright © {new Date().getFullYear()} Rooted Growth Behavioral Health®. All rights reserved.
					</p>
					<p class="text-sm mt-2">
						Se habla español. <a href="https://www-rootedgbh-com.translate.goog/?_x_tr_sl=auto&_x_tr_tl=es&_x_tr_hl=es" class="underline hover:text-purple-400">Haga clic aquí</a> para ver la versión en español de este sitio.
					</p>
				</div>
			</div>
		</footer>

		<script>
			const mobileMenuButton = document.getElementById('mobile-menu-button');
			const mobileMenu = document.getElementById('mobile-menu');

			mobileMenuButton?.addEventListener('click', () => {
				mobileMenu?.classList.toggle('hidden');
			});

			// Close mobile menu when clicking a link
			const mobileLinks = mobileMenu?.querySelectorAll('a');
			mobileLinks?.forEach(link => {
				link.addEventListener('click', () => {
					mobileMenu?.classList.add('hidden');
				});
			});
		</script>
	</body>
</html>